{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "max-len": ["error", { "code": 120 }],
        "indent": ["error", "tab"],
        "object-curly-spacing": ["error", "always", { "arraysInObjects": false }],


        "no-tabs": "off",
        "require-jsdoc": "off",
        "new-cap": "off",
        "no-mixed-spaces-and-tabs": "off"
    }
}
